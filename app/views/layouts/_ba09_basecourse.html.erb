<div class="card coursecard" >
  <div class="card-header" title="Course is valid only when both grade and attempt are selected." style="padding-top:0.5rem; padding-bottom:0.5rem;">
    <span style="font-size:0.8rem;">
      <span class="badge badge-pill rounded" style="float:right" id="<%=course.field_abrev%>"
        style="margin-left:5px;"><%=course.course_abrev%>
      </span>
      <span class="badge badge-pill rounded" style="float:right" id="ECTS"> ECTS
        <%=course.ects%>.0
      </span>
      <span id="ba09_title_<%=course.course_abrev%>"><%=course.course_name%></span>
    </span>
    <hr class="my-0">
      <% if course.course_abrev != "SWTPRA" %>
        <div class="input-group input-group-sm" id="ba09_basecourse_<%=course.course_abrev%>"
          maps_to="<%=course.maps_to%>" style="padding-left:25%; margin-top:2%;">
          <div class="input-group-prepend">
            <span class="input-group-text">Grade</span>
          </div>
          <%= select_tag "ba09_grade_" + course.course_abrev,
            options_for_select([0, 1.0, 1.3, 1.7, 2.0, 2.3, 2.7, 3.0, 3.3, 3.7, 4.0, 5.0]),
            {class:"custom-select form-control", autocomplete: "off"} %>
          <div class="input-group-prepend" style="margin-left:5px">
            <span class="input-group-text">Attempt</span>
          </div>
          <%= select_tag "ba09_attempt_" + course.course_abrev, options_for_select((0..3).step(1)),
            {class:"custom-select form-control", autocomplete: "off"} %>
        </div>
      <% else %>
        <div style="margin-top: 1%; margin-bottom: 1%; font-size: 0.7rem; border: 1px solid lightgrey; border-radius: 5px;">
          <div style="padding:0.5rem;">
            Important Notice: Can only be selected if Softwareentwurf was succesfully passed!
          </div>
        </div>
        <div class="custom-control custom-checkbox" style="margin-bottom:5px; margin-left:5px">
          <input type="checkbox" class="custom-control-input" id="check_<%=course.course_abrev%>" disabled="true" autocomplete="off">
          <label class="custom-control-label" for="check_<%=course.course_abrev%>" style="font-size:0.9rem;">Praktikum was succesfully passed</label>
        </div>
        <div class="input-group input-group-sm" id="ba09_basecourse_<%=course.course_abrev%>"
          maps_to="<%=course.maps_to%>" style="padding-left:25%; margin-top:2%;">
          <div class="input-group-prepend">
            <span class="input-group-text">Grade</span>
          </div>
          <%= select_tag "ba09_grade_" + course.course_abrev,
            options_for_select([0, 1.0, 1.3, 1.7, 2.0, 2.3, 2.7, 3.0, 3.3, 3.7, 4.0, 5.0]),
            {class:"custom-select form-control", disabled: "true", autocomplete: "off"} %>
          <div class="input-group-prepend" style="margin-left:5px">
            <span class="input-group-text">Attempt</span>
          </div>
          <%= select_tag "ba09_attempt_" + course.course_abrev, options_for_select((0..3).step(1)),
            {class:"custom-select form-control", disabled: "true", autocomplete: "off"} %>
        </div>

      <% end %>

  </div>
</div>
