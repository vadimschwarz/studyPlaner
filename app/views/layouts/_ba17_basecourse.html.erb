<div class="card coursecard" >
  <div class="card-header" title="" id="ba17_title_<%=course.course_abrev%>" style="padding-top:0.5rem; padding-bottom:0.5rem;">
      <span style="font-size:0.8rem;">
        <span class="badge badge-pill rounded" style="float:right" id="<%=course.field_abrev%>"
          style="margin-left:5px;"><%=course.course_abrev%>
        </span>
        <span class="badge badge-pill rounded" style="float:right" id="ECTS">ECTS
          <%=course.ects%>.0
        </span>
        <%=course.course_name%>
        <% if course.course_abrev == "GP" %>
          <i id="ba17_iconwarning_<%= course.course_abrev %>" title ="If GPI or GPII weren't passed till SS18 then GP has to be passed again!"
              class="fa fa-exclamation-triangle" style="display:none;">
            </i>
        <% end %>
      </span>
      <i class="fa fa-check" style="margin-left:2px; display:none;" id="iconcheck_ba17_<%=course.course_abrev%>"></i>
      <hr class="my-0">
      <div class="input-group input-group-sm" id="ba17_basecourse_<%=course.course_abrev%>"
        field_area="<%=course.field_abrev%>" style="padding-left:25%; margin-top:2%;">
        <div class="input-group-prepend">
          <span class="input-group-text">Grade</span>
        </div>
        <%= select_tag "ba17_grade_" + course.course_abrev,
        options_for_select([0, 1.0, 1.1, 1.2, 1.3, 1.4, 1.5, 1.6, 1.7, 1.8, 1.9, 2.0,
          2.1, 2.2, 2.3, 2.4, 2.5, 2.6, 2.7, 2.8, 2.9, 3.0,
          3.1, 3.2, 3.3, 3.4, 3.5, 3.6, 3.7, 3.8, 3.9, 4.0, 5.0]),
          {class:"custom-select form-control"} %>
        <div class="input-group-prepend" style="margin-left:5px">
          <span class="input-group-text">Attempt</span>
        </div>
        <%= select_tag "ba17_attempt_" + course.course_abrev, options_for_select((0..3).step(1)),
          {class:"custom-select form-control"} %>
      </div>
  </div>
</div>
