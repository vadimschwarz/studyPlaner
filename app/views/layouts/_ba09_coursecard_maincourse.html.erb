<div class="card coursecard">
  <div class="card-header" title="<%= title %><%= field.field_abrev %>: <%= field.field_name %>" style="padding-top:0.5rem; padding-bottom:0.5rem;">
      <a class="collapsed" data-toggle="collapse" href="#collapse_main_<%= field.field_abrev %>"
         style= "text-decoration: none; color:inherit;">
      <i class="fa fa-plus-square"></i>
      <span style="font-size:0.8rem;"><%= field.field_name %></span>
     </a>
     <span class="badge badge-pill rounded float-right" id="<%= field.field_abrev %>"><%= field.field_abrev %></span>
     <span class="badge badge-pill rounded float-right" id="ECTS">ECTS 8.0</span>
  </div>
  <div class="collapse" id="collapse_main_<%= field.field_abrev %>">
    <div class="card-body" style="padding-top:0.5rem; padding-bottom:0.7rem;">
      <div class="input-group input-group-sm">

        <%= select_tag "ba09_maincourse_"+field.field_abrev+"1",
          options_for_select( field_courses.map{|f| [f.ba_maincourse.course_name, f.ba_maincourse.course_abrev,
          {incomp_with: f.ba_maincourse.incompatibilities.pluck(:incomp_with).to_json}]}.insert( 0 ,["Select SWT: Course I", ""] )),
          {class:"custom-select form-control", autocomplete: "off"} %>

        <div class="input-group input-group-sm" style="padding-left:40%; margin-top:5px;">
          <div class="input-group-prepend" >
            <span class="input-group-text" style="font-size: 0.8rem;">Grade</span>
          </div>
          <%= select_tag "ba09_grade_"+field.field_abrev+"1",
            options_for_select([0, 1.0, 1.3, 1.7, 2.0, 2.3, 2.7, 3.0, 3.3, 3.7, 4.0, 5.0]),
            {class:"custom-select form-control", disabled: true, autocomplete: "off"} %>

          <div class="input-group-prepend" style="margin-left:5px">
            <span class="input-group-text" style="font-size: 0.8rem;">Attempt</span>
          </div>
          <%= select_tag "ba09_attempt_"+field.field_abrev+"1", options_for_select((0..3).step(1)),
            {class:"custom-select form-control", disabled: true, autocomplete: "off"} %>
        </div>
      </div>
      <hr>
      <div class="input-group input-group-sm"style="margin-top:1%;">
        <%= select_tag "ba09_maincourse_"+field.field_abrev+"2",
          options_for_select( field_courses.map{|f| [f.ba_maincourse.course_name, f.ba_maincourse.course_abrev,
          {incomp_with: f.ba_maincourse.incompatibilities.pluck(:incomp_with).to_json }]}.insert( 0 ,["Select SWT: Course II", ""] )),
          {class:"custom-select form-control", autocomplete: "off"} %>
      </div>
      <div class="input-group input-group-sm" style="padding-left:40%; margin-top:1%;">
        <div class="input-group-prepend">
          <span class="input-group-text" style="font-size: 0.8rem;">Grade</span>
        </div>
        <%= select_tag "ba09_grade_"+field.field_abrev+"2",
          options_for_select([0, 1.0, 1.3, 1.7, 2.0, 2.3, 2.7, 3.0, 3.3, 3.7, 4.0, 5.0]),
          {class:"custom-select form-control", disabled: true, autocomplete: "off"} %>

        <div class="input-group-prepend" style="margin-left:5px">
          <span class="input-group-text" style="font-size: 0.8rem;">Attempt</span>
        </div>
        <%= select_tag "ba09_attempt_"+field.field_abrev+"2", options_for_select((0..3).step(1)),
          {class:"custom-select form-control", disabled: true, autocomplete: "off"} %>
      </div>
    </div>
  </div>
</div>
