<div class="card coursecard">
  <div class="card-header" title="<%= title %><%= field.field_abrev %>: <%= field.field_name %>"
      style="padding-top:0.5rem; padding-bottom:0.5rem;">
    <a class="collapsed" data-toggle="collapse" href="#collapse_base_<%= field.field_abrev %>"
       style= "text-decoration: none; color:inherit;">
    <i class="fa fa-plus-square"></i>
    <span style="font-size:0.8rem;"><%= field.field_name %></span>
    </a>
    <span class="badge badge-pill rounded" style="float:right" id="<%= field.field_abrev %>">
      <%= field.field_abrev %>
    </span>
  </div>
  <div class="collapse" id="collapse_base_<%= field.field_abrev %>">
    <div class="card-body" style="padding-top:0.5rem; padding-bottom:0.7rem;">
      <% field_courses.each do |course| %>
        <%= render partial: "layouts/ba09_basecourse", locals: {course: course}%>
      <% end %>
    </div>
  </div>
</div>
